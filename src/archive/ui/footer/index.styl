#footer
  background $color-background-blue
  color $color-footer-white
  position relative
  width 100%
  z-index 100

  .block--footer__content
    align-items center
    justify-content space-between
    padding 60px 0

    @media $media-query-mobile
      padding 50px 0
      text-align center

    .footer__contact
      font-size 18px
      font-weight 600
      letter-spacing -.5px
      line-height 26px

      @media $media-query-mobile
        font-size 14px
        line-height 22px

        > strong
          display block

    .footer__link
      color $color-footer-white
      font-weight 400
      letter-spacing 0
      text-decoration none

      &:hover
        border-bottom 1px solid $color-footer-blue
        color $color-footer-blue

    .footer__social
      display block

      @media $media-query-mobile
        margin-top 24px
