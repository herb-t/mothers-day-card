.modal
  bottom 0
  display block
  left 0
  position fixed
  right 0
  top 0
  transform scale(0)
  z-index 1

  &[data-open]
    z-index 0
    transform scale(1)

    .modal__background
      background rgba(0, 0, 0, .6)

    .modal__wrap
      .modal__modal
        animation moveUpModal .5s $easing-snap none

        .modal__content
          -webkit-overflow-scrolling touch

  .modal__background
    background rgba(0, 0, 0, .8)
    cursor pointer
    height 100%
    left 0
    position absolute
    top 0
    width 100%

  .modal__wrap
    align-items center
    display flex
    height 100%
    justify-content center

    .modal__modal
      animation moveDownModal .05s $easing-snap none
      background white
      box-shadow 1px 1px rgba(0, 0, 0, .1)
      color $color-headline-black
      font-size 14px
      font-weight 400
      line-height 25px
      margin 60px 90px
      max-height calc(100% - 120px)
      max-width 768px
      position relative
      width calc(100% - 180px)

      @media $media-query-mobile
        font-size 13px
        line-height 20px
        margin 30px
        max-height calc(100% - 60px)
        width calc(100% - 60px)

      .modal__video-container
        height 0
        padding-bottom 56.25%
        position relative

      .modal__content
        box-sizing border-box
        height 100%
        max-height calc(100% - 120px)
        overflow auto
        padding 40px 60px

        ul
          padding-left 2em

        @media $media-query-mobile
          max-height calc(100% - 60px)
          padding 24px

      .modal__title
        color $color-headline-blue
        font-size 28px
        font-weight 600
        letter-spacing -.5px
        line-height 36px
        margin 0 0 24px

        @media $media-query-mobile
          font-size 20px
          line-height 26px
          margin 0 0 12px

      .modal__close-outer
        background 0
        height 50px
        position absolute
        right 0
        top 0
        transform translate3d(50%, -50%, 0)
        width 50px

        .modal__close-inner
          border-radius 25px
          display block
          height 50px
          left 0
          overflow hidden
          position absolute
          top 0
          transform-origin center center
          width 50px

          .modal__close
            align-items center
            background $color-background-blue
            border 0
            border-radius 25px
            box-shadow 1px 1px rgba(0, 0, 0, .1)
            cursor pointer
            display flex
            height 50px
            justify-content center
            left 0
            padding 0
            position absolute
            top 0
            transform-origin center center
            width 50px

            &:before
              background $color-background-white
              content ''
              display block
              height 2px
              left 50%
              position absolute
              top 50%
              transform translate3d(-50%, -50%, 0) rotate(45deg)
              width 16px

            &:after
              background $color-background-white
              content ''
              display block
              height 2px
              left 50%
              position absolute
              top 50%
              transform translate3d(-50%, -50%, 0) rotate(-45deg)
              width 16px

/* content block */

#content
  animation slideDownContent .5s $easing-snap forwards

  &[data-open]
    animation slideUpContent .5s $easing-snap forwards
    overflow hidden
    pointer-events none
    z-index 0

/* video modal exepction */

.modal[data-modal=video]
  .modal__modal
    max-width calc(1.777 * (100vh - 60px))
