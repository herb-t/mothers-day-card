.social-menu
  display block

.social-menu__list
  display flex
  justify-content center
  list-style none
  margin 0
  padding 0

.social-menu__item
  animation moveUpButton .55s $easing-snap forwards
  display block
  height 50px
  margin-right 10px
  opacity 0
  position relative
  transform translateY(-100%)

  @media $media-query-mini
    margin-right 4px

  &:last-child
    margin-right 0

/* on visible */

.visible .social-menu__item
  animation moveDownButton .25s $easing-snap forwards

  for i in 1..4
    &:nth-child({i})
      animation-delay (.1 + i/25)s
