@import 'ui/colors.styl'
@import 'ui/easings.styl'
@import 'ui/keyframes.styl'
@import 'ui/media.styl'

html, body
  width 100%

html
  box-sizing border-box
  overflow-x hidden

body
  color $color-headline-black
  font-family Poppins, Arial, sans-serif
  margin 0
  min-width 320px
  overflow-x hidden
  overflow-y auto
  padding 0
  position relative

  &[data-open]
    position fixed

  &[data-block-ui]
    pointer-events none

#content
  background $color-background-white
  height 100%
  min-height 100%
  overflow hidden
  position relative
  z-index 1

#fixture
  background $color-background-white
  display block
  margin-top 100vh
  position absolute
  top 0
  width 100%
  z-index 3

  @media $media-query-mobile
    display none

a
  color $color-copy-blue
  text-decoration none

@require 'ui/**/*.styl'
